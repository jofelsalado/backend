{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": ".",
		"module": "CommonJS",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false
	},
	"exclude": ["node_modules"],
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}
