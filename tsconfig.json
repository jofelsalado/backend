{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": ".",
		"module": "CommonJS",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"experimentalDecorators": true,
		"baseUrl": ".",
		"paths": {
			"@/src/*": ["./src/*"]
		}
	},
	"exclude": ["node_modules"]
}
